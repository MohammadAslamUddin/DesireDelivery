@*@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@


@{
    string DD = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);
    switch (DD)
    {
        case "Product":
            Layout = "~/Views/Shared/_LayoutUser.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}